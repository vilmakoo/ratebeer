<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Found:</strong>
  <%= @beer_club.found %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<% if @beer_club.members.any? %>

    <h3>Members</h3>

    <ul>
      <% @beer_club.members.each do |member| %>
          <li>
            <%= link_to member.username, member %>
          </li>
      <% end %>
    </ul>

<% else %>

    <p>
      no members
    </p>

<% end %>

<%= link_to 'Edit', edit_beer_club_path(@beer_club) %> |
<%= link_to 'Back', beer_clubs_path %>

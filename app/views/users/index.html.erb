<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.username, user %></td>
        <td><% if not user.active  %>
              <% if current_user && current_user.admin %>
                  <span class="label label-info">account frozen</span>
              <% end %>
          <% end %></td>
      </tr>
  <% end %>
  </tbody>
</table>

